# ====================================
# EJEMPLO DE CONFIGURACIÓN PERSONALIZADA
# ====================================

# Domain
DOMAIN=miproyecto.com  # Tu dominio en producción
FRONTEND_HOST=http://localhost:5173  # Para desarrollo

# Environment: local, staging, production
ENVIRONMENT=local

# Información del Proyecto
PROJECT_NAME="Mi Proyecto Musical API"
STACK_NAME=mi-proyecto-musical-api

# Backend Security (USAR LAS CLAVES GENERADAS ARRIBA)
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:5173,https://localhost,https://localhost:5173"
SECRET_KEY=changethis  # ← Genera una clave segura
FIRST_SUPERUSER=admin@miproyecto.com  # ← Tu email
FIRST_SUPERUSER_PASSWORD=changethis  # ← Usa una contraseña segura
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Configuración de Email (opcional - para recuperación de contraseñas)
SMTP_HOST=smtp.gmail.com  # Para Gmail
SMTP_USER=noreply@miproyecto.com
SMTP_PASSWORD=your_password_here  # App password de Gmail
EMAILS_FROM_EMAIL=noreply@miproyecto.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# Base de Datos PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mi_proyecto_db  # ← Nombre de tu base de datos
POSTGRES_USER=mi_usuario  # ← Tu usuario de postgres
POSTGRES_PASSWORD=changethis  # ← Usa una contraseña segura

# Google OAuth & APIs
GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=https://miproyecto.com/auth/google/callback
GOOGLE_API_KEY=your_api_key_here

# SoundCloud OAuth & APIs
SOUNDCLOUD_CLIENT_ID=your_client_id_here
SOUNDCLOUD_CLIENT_SECRET=your_client_secret_here
SOUNDCLOUD_REDIRECT_URI=https://miproyecto.com/auth/soundcloud/callback

# Google Cloud / Vertex AI
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_CLOUD_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-2.5-flash-lite

# Monitoring (opcional)
SENTRY_DSN=  # Tu DSN de Sentry si usas monitoreo

# Docker (para producción)
DOCKER_IMAGE_BACKEND=mi-proyecto/backend
DOCKER_IMAGE_FRONTEND=mi-proyecto/frontend
